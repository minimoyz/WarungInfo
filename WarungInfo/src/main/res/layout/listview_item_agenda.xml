<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/shapeoval_textview"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <com.pu.anonymous.mobileinformationcenter.view.CustomTextView
        android:id="@+id/title_agenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tanggal_agenda"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="INI TITLE\nCOba"
        android:textSize="@dimen/textSizeTittle"
        android:textColor="@color/biru"
        cm:fontType="roman" />

    <com.pu.anonymous.mobileinformationcenter.view.CustomTextView
        android:id="@+id/tanggal_agenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title_agenda"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:text="INI TANGGAL"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/textSizeTanggal"
        cm:fontType="roman" />

    <ImageView
        android:id="@+id/image_agenda"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_height"
        android:layout_below="@+id/title_agenda"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/crop_pict1" />

</RelativeLayout>